<?xml version="1.0" encoding="utf-8"?>
<manifest
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.akllev">

    <!-- Runtime bildirim izni (Android 13+) -->
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />

    <!-- Kesin alarm (AlarmManager exact) -->
    <uses-permission android:name="android.permission.SCHEDULE_EXACT_ALARM" />

    <!-- Boot sonrası alarmları tekrar kurmak için -->
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />

    <!-- Foreground Service izinleri (targetSdk 34+ ise gerekli) -->
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE_DATA_SYNC" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE_CONNECTED_DEVICE" />

    <!-- Bluetooth (yalnızca bağlanma kullanıyorsak CONNECT yeter) -->
    <uses-permission android:name="android.permission.BLUETOOTH_CONNECT" />

    <!-- Eski sürümler (API 30 ve altı) için geriye dönük izinler -->
    <uses-permission android:name="android.permission.BLUETOOTH" android:maxSdkVersion="30" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" android:maxSdkVersion="30" />

    <uses-permission android:name="android.permission.BLUETOOTH_SCAN" />



    <application
        android:allowBackup="true"
        android:label="@string/app_name"
        android:icon="@mipmap/ic_launcher"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AkıllıEv"
        tools:targetApi="s">

        <!-- LAUNCHER -->
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Isıtma komutlarını alan BroadcastReceiver (AlarmManager tetikliyor) -->
        <receiver
            android:name=".alarm.HeatingActionReceiver"
            android:exported="false" />

        <!-- Cihaz yeniden açıldığında alarmları yeniden kur -->
        <receiver
            android:name=".alarm.BootReceiver"
            android:enabled="true"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />
            </intent-filter>
        </receiver>

        <!-- Komutları arka planda ileten Foreground Service -->
        <service
            android:name=".service.BluetoothControlService"
            android:exported="false"
            android:foregroundServiceType="dataSync|connectedDevice" />
    </application>

</manifest>
